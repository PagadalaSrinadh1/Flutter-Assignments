import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

// ======================= ROUTES CLASS =======================
class Routes {
  static const home = '/';
  static const about = '/about';

  static Route<dynamic> generateRoute(RouteSettings settings) {
    switch (settings.name) {
      case home:
        return MaterialPageRoute(builder: (_) => HomeScreen());

      case about:
        final Color bgColor = settings.arguments as Color;
        return MaterialPageRoute(
          builder: (_) => AboutScreen(bgColor: bgColor),
        );

      default:
        return MaterialPageRoute(
          builder: (_) => Scaffold(body: Center(child: Text("Route not found"))),
        );
    }
  }
}

// ======================= MAIN APP ===========================
class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      initialRoute: Routes.home,
      onGenerateRoute: Routes.generateRoute,
    );
  }
}

// ======================= HOME SCREEN ========================
class HomeScreen extends StatefulWidget {
  @override
  _HomeScreenState createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> {
  Color selectedColor = Colors.blue;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text("Home Screen")),
      body: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Text(
            "Choose Background Color for About Screen:",
            style: TextStyle(fontSize: 18),
          ),

          SizedBox(height: 20),

          // Color picker buttons
          Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              colorButton(Colors.blue),
              colorButton(Colors.green),
              colorButton(Colors.red),
              colorButton(Colors.orange),
            ],
          ),

          SizedBox(height: 40),

          ElevatedButton(
            onPressed: () {
              Navigator.pushNamed(
                context,
                Routes.about,
                arguments: selectedColor,
              );
            },
            child: Text("Go to About Screen"),
          ),
        ],
      ),
    );
  }

  Widget colorButton(Color color) {
    return GestureDetector(
      onTap: () => setState(() => selectedColor = color),
      child: Container(
        margin: EdgeInsets.all(8),
        width: 40,
        height: 40,
        decoration: BoxDecoration(
          color: color,
          borderRadius: BorderRadius.circular(8),
          border: Border.all(
            color: selectedColor == color ? Colors.black : Colors.transparent,
            width: 3,
          ),
        ),
      ),
    );
  }
}

// ======================= ABOUT SCREEN ========================
class AboutScreen extends StatelessWidget {
  final Color bgColor;

  AboutScreen({required this.bgColor});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: bgColor,
      appBar: AppBar(
        backgroundColor: bgColor,
        title: Text("About Screen"),
      ),
      body: Center(
        child: Text(
          "This is the About Screen",
          style: TextStyle(fontSize: 24),
        ),
      ),
    );
  }
}